# ====================================
# General Application Settings
# ====================================

# アプリケーション環境 (development, productionなど)
APP_ENV=development

# アプリケーションバージョン
APP_VERSION=dev


# ====================================
# Database Settings
# ====================================

# データベース接続URL (必須)
# 例: postgres://user:password@host:port/database_name
DATABASE_URL=postgres://dev_user:dev_pass@localhost:5432/dev_db

# データベースの最大接続数 (デフォルト: 25)
DB_MAX_CONNECTIONS=25

# データベースのアイドル接続の最大時間 (デフォルト: 15m)
DB_MAX_IDLE_TIME=15m

# データベース接続の最大寿命 (デフォルト: 1h)
DB_CONN_MAX_LIFETIME=1h


# ====================================
# JWT Settings
# ====================================

# JWTの秘密鍵 (必須、32文字以上)
JWT_SECRET=your_super_secret_jwt_key_at_least_32_chars

# JWTアクセストークンの有効期限 (デフォルト: 15m)
JWT_ACCESS_TOKEN_EXPIRATION=15m

# JWTリフレッシュトークンの有効期限 (デフォルト: 7d)
JWT_REFRESH_TOKEN_EXPIRATION=7d

# JWTの発行者 (デフォルト: travel-api)
JWT_ISSUER=travel-api


# ====================================
# Server Settings
# ====================================

# サーバーポート (デフォルト: 8080)
PORT=8080

# サーバーホスト (デフォルト: 0.0.0.0)
HOST=0.0.0.0

# サーバーの読み取りタイムアウト (デフォルト: 30s)
SERVER_READ_TIMEOUT=30s

# サーバーの書き込みタイムアウト (デフォルト: 30s)
SERVER_WRITE_TIMEOUT=30s

# サーバーのアイドルタイムアウト (デフォルト: 60s)
SERVER_IDLE_TIMEOUT=60s

# サーバーのシャットダウンタイムアウト (デフォルト: 30s)
SERVER_SHUTDOWN_TIMEOUT=30s


# ====================================
# Logging Settings
# ====================================

# ログレベル (debug, info, warn, error) (デフォルト: info)
LOG_LEVEL=info

# ログフォーマット (json, text) (デフォルト: json)
LOG_FORMAT=json